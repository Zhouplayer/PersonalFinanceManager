<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.personalfinancemanager.AddBankCardController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" xmlns:fx="http://javafx.com/fxml">

        <ComboBox fx:id="bankNameComboBox" promptText="Select a bank">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="RBC" />
                    <String fx:value="CIBC" />
                    <String fx:value="BMO" />
                    <String fx:value="TD" />
                    <String fx:value="ScotiaBank" />
                    <!-- Add more categories as needed -->
                </FXCollections>
            </items>
        </ComboBox>

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#handleAddAction" text="Add" />
            <Button onAction="#handleBackAction" text="Back" />
        </HBox>
    </VBox>

</AnchorPane>
